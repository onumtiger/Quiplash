<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_purple"
    tools:context=".game.WaitingActivity">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swiperefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/host_waiting_go_back_arrow"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="41dp"
                android:background="@drawable/ic_go_back_arrow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.042"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:fontFamily="@font/roboto_slab_bold"
                android:gravity="center"
                android:text="@string/waiting_for_players"
                android:textColor="@color/colorWhite"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="410dp"
                android:layout_height="293dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">


                <ListView
                    android:id="@+id/players_list"
                    android:layout_width="match_parent"
                    android:layout_height="267dp" />
            </RelativeLayout>

            <Button
                android:id="@+id/invite_players_btn"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="24dp"
                android:background="@android:color/black"
                android:fontFamily="@font/roboto_slab_bold"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/invite_players_btn"
                android:textColor="@color/colorWhite"
                android:textColorHighlight="@color/colorWhite"
                android:textColorHint="@color/colorWhite"
                android:textColorLink="@color/colorWhite"
                android:textSize="20sp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <Button
                android:id="@+id/start_game_btn"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:background="@android:color/black"
                android:fontFamily="@font/roboto_slab_bold"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/start_game_btn"
                android:textColor="@color/colorWhite"
                android:textColorHighlight="@color/colorWhite"
                android:textColorHint="@color/colorWhite"
                android:textColorLink="@color/colorWhite"
                android:textSize="20sp"
                android:visibility="invisible"
                app:layout_constraintEnd_toStartOf="@+id/end_game"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/invite_players_btn" />


            <Button
                android:id="@+id/leave_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/colorButtonRed"
                android:fontFamily="@font/roboto_slab_bold"
                android:text="@string/leave_game_btn"
                android:textColor="@color/colorWhite"
                android:textColorHighlight="@color/colorWhite"
                android:textColorHint="@color/colorWhite"
                android:textColorLink="@color/colorWhite"
                android:textSize="20sp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/invite_players_btn" />

            <Button
                android:id="@+id/join_game_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/colorGreen"
                android:fontFamily="@font/roboto_slab_bold"
                android:text="@string/join_game"
                android:textColor="@color/colorWhite"
                android:textColorHighlight="@color/colorWhite"
                android:textColorHint="@color/colorWhite"
                android:textColorLink="@color/colorWhite"
                android:textSize="20sp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/invite_players_btn" />

            <Button
                android:id="@+id/end_game"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="32dp"
                android:background="@color/colorButtonRed"
                android:fontFamily="@font/roboto_slab_bold"
                android:text="@string/end_game_btn"
                android:textColor="@color/colorWhite"
                android:textColorHighlight="@color/colorWhite"
                android:textColorHint="@color/colorWhite"
                android:textColorLink="@color/colorWhite"
                android:textSize="20sp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/start_game_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/start_game_btn"
                app:layout_constraintTop_toTopOf="@+id/start_game_btn" />

            <LinearLayout
                android:id="@+id/linearLayoutDrinks"
                android:layout_width="231dp"
                android:layout_height="154dp"
                android:background="@drawable/char_border_frame"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/start_game_btn"
                app:layout_constraintVertical_bias="0.034">

                <CheckBox
                    android:id="@+id/CheckBoxBeer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Beer"
                    android:textAllCaps="true"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="107dp"
                    tools:layout_editor_absoluteY="16dp" />

                <CheckBox
                    android:id="@+id/CheckBoxWine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wine"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="107dp"
                    tools:layout_editor_absoluteY="16dp" />

                <CheckBox
                    android:id="@+id/CheckBoxCocktails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cocktails"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="107dp"
                    tools:layout_editor_absoluteY="16dp" />

                <CheckBox
                    android:id="@+id/CheckBoxShots"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shots"
                    android:textAlignment="viewEnd"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="107dp"
                    tools:layout_editor_absoluteY="16dp" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>