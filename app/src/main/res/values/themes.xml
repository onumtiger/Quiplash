<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="QPSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorPink</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/colorWhite
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/colorWhite
        </item>
    </style>

</resources>